{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"]
    }
  }
}
